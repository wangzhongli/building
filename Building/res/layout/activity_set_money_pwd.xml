        <View
            style="@style/line_style"
            android:layout_marginLeft="16dip"
            android:background="@color/login_text_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:background="@color/person_item_nor"
            android:paddingLeft="16dip"
            android:paddingRight="16dip" >

            <TextView
                android:id="@+id/tv_money_"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_48"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="钱包密码    "
                android:textColor="#77829C"
                android:textSize="18sp" />

            <com.e1858.building.view.ClearEditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_toRightOf="@+id/tv_money_"
                android:background="@null"
                android:drawablePadding="@dimen/activity_padding"
                android:hint="请输入6-20位字符"
                android:inputType="textPassword"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="16dip"
            android:background="@color/login_text_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:background="@color/person_item_nor"
            android:paddingLeft="16dip"
            android:paddingRight="16dip" >

            <TextView
                android:id="@+id/tv_new_money_"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_48"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="确认密码    "
                android:textColor="#77829C"
                android:textSize="18sp" />

            <com.e1858.building.view.ClearEditText
                android:id="@+id/input_password_en"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_toRightOf="@+id/tv_new_money_"
                android:background="@null"
                android:drawablePadding="@dimen/activity_padding"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="16dip"
        android:text="@string/text_verify_content"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_next"
        style="@style/wuye_cm_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="16dip"
        android:onClick="postPwd"
        android:text="下一步" />

</LinearLayout>
</ScrollView>