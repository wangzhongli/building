<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_text_color"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@color/person_item_nor"
            android:orientation="vertical" >

            <include
                android:id="@+id/listitem_head"
                layout="@layout/listitem_person_info_head" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@color/person_item_nor"
            android:orientation="vertical" >

            <include
                android:id="@+id/listitem_username"
                layout="@layout/listitem_person_info" />

            <View style="@style/listview_indent_sep" />

            

            <include
                android:id="@+id/listitem_realname"
                layout="@layout/listitem_person_info" />

            <View style="@style/listview_indent_sep" />

            <include
                android:id="@+id/listitem_phone"
                layout="@layout/listitem_person_info" />

            <View style="@style/listview_indent_sep" />
            
            <include
                android:id="@+id/listitem_nickname"
                layout="@layout/listitem_person_info" />

            <View style="@style/listview_indent_sep" />

            <include
                android:id="@+id/listitem_city"
                layout="@layout/listitem_person_info" />

            <View style="@style/listview_indent_sep" />

            <include
                android:id="@+id/listitem_address"
                layout="@layout/listitem_person_info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@color/person_item_nor"
            android:orientation="vertical" >

            <include
                android:id="@+id/listitem_password"
                layout="@layout/listitem_person_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@color/person_item_nor"
            android:orientation="vertical" >

            <include
                android:id="@+id/listitem_auth"
                layout="@layout/listitem_person_info" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>