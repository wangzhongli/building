<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <FrameLayout
        android:id="@+id/order_info_item_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="2dip"
        android:layout_marginBottom="16dip"
        android:layout_marginLeft="16dip"
        android:layout_marginTop="8dip"
        android:layout_centerVertical="true"
        android:background="@drawable/mall_list_item_bg" >

        <ImageView
            android:id="@+id/order_info_item_iv"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:scaleType="fitXY" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dip"
        android:layout_alignTop="@+id/order_info_item_fl"
        android:layout_toRightOf="@+id/order_info_item_fl"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout style="@style/order_info_item" >

            <TextView
                style="@style/order_info_item_tv_left"
                android:text="类型：" />

            <TextView
                android:id="@+id/roborder_item_tv_goods_type"
                style="@style/order_info_item_tv_right" />
        </LinearLayout>

        <LinearLayout style="@style/order_info_item" >

            <TextView
                style="@style/order_info_item_tv_left"
                android:text="名称：" />

            <TextView
                android:id="@+id/roborder_item_tv_goods_name"
                style="@style/order_info_item_tv_right" />
        </LinearLayout>

        <LinearLayout style="@style/order_info_item" >

            <TextView
                style="@style/order_info_item_tv_left"
                android:text="数量：" />

            <TextView
                android:id="@+id/roborder_item_tv_goods_num"
                style="@style/order_info_item_tv_right" />
        </LinearLayout>
        <LinearLayout style="@style/order_info_item"
            android:layout_marginBottom="10dip"
             >

            <TextView
                style="@style/order_info_item_tv_left"
                android:text="规格：" />

            <TextView
                android:id="@+id/roborder_item_tv_goods_guige"
                style="@style/order_info_item_tv_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line_style"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dip"
        android:layout_marginLeft="16dip" />

</RelativeLayout>