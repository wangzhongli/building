<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View style="@style/line_style" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dip"
        android:background="@color/bg_color_e6e9f2" />

    <View style="@style/line_style" />

    <include layout="@layout/order_commen_layout" />

    <View style="@style/line_style" />

    <include layout="@layout/order_content_info_layout" />

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/order_content_sign_address"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/expand_order_info_selector"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/not_complete_sign_iv"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sign_address_icon"
                android:scaleType="center" />

            <TextView
                android:id="@+id/not_complete_sign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:text="上门签到"
                android:textColor="@color/bar_bottom_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/line_style_ve" />

        <LinearLayout
            android:id="@+id/order_content_check_accept"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/expand_order_info_selector"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/not_complete_accept_iv"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ensure_tihuo_gray"
                android:scaleType="center" />

            <TextView
                android:id="@+id/not_complete_accept_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:text="商品验收"
                android:textColor="@color/notes_textColor"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/line_style_ve" />

        <LinearLayout
            android:id="@+id/order_content_reserve_buyer_ll"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/expand_order_info_selector"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/not_complete_ensure_iv"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/complete_take_pic_gray"
                android:scaleType="center" />

            <TextView
                android:id="@+id/not_complete_ensure_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:text="拍照上传"
                android:textColor="@color/notes_textColor"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_style" />

</LinearLayout>