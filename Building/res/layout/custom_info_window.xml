<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_info_bubble"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/map_window_rob"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:background="@color/red"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:textSize="16sp"
        android:text="抢单" />

    <LinearLayout
        android:layout_width="240dip"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/map_window_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:text="郑州-金水区-文化路"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map_window_snippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:text="安装   服务时间：2014-12-26 17:00"
            android:textColor="#ff7f7f7f"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/map_window_snippet_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:text="距离当前位置大概256米"
            android:textColor="#ff7f7f7f"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>