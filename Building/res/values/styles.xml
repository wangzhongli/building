<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="numberPickerStyle">@style/NPWidget.Holo.NumberPicker</item>
    </style>

    <style name="notes_color_font">
        <item name="android:textSize">@dimen/body_textSize</item>
        <item name="android:textColor">@color/login_text_color</item>
    </style>

    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/line_divider</item>
    </style>

    <style name="line_style_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:background">@color/login_text_color</item>
    </style>

    <style name="line_style_ve">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_divider</item>
    </style>

    <style name="line_style_ve_title">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/line_divider_</item>
    </style>

    <style name="wuye_cm_button">
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/build_login_button</item>
    </style>

    <style name="title_bar_style_tv">
        <item name="android:textSize">@dimen/notes_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="title_bar_style_iv">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">12dip</item>
        <item name="android:layout_height">12dip</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:background">@drawable/arrow_down</item>
    </style>

    <style name="order_info_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="order_info_item_tv_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">14dip</item>
        <item name="android:textColor">@color/text_color_77829c</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="order_info_item_tv_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 个人中心  item -->
    <style name="person_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:background">@drawable/person_item_selector</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="person_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#9da9b9</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="person_item_iv_left">
        <item name="android:layout_width">24dip</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="person_item_iv">
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">12dip</item>
        <item name="android:layout_height">12dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/arrow_right</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="listview_indent_sep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:background">#ff393f4f</item>
    </style>

    <style name="btn_service_time_week">
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dip</item>
        <item name="android:background">@drawable/btn_service_time_week</item>
    </style>

    <style name="edittext_style_with_null_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">24dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:drawablePadding">@dimen/activity_padding</item>
        <item name="android:layout_marginTop">@dimen/activity_margin</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="order_info_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:textColor">@color/text_color_77829c</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>